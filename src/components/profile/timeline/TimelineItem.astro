---
interface Props {
	date: string
	title: string
	last?: boolean
}

const { date, last, title } = Astro.props
---

<li
	class:list={[
		'ml-4',
		{
			'mb-10': !last,
		},
	]}
>
	<div class="absolute w-3 h-3 bg-ctp-blue rounded-full mt-1.5 -left-1.5"></div>
	<time class="mb-1 text-sm font-normal leading-none text-ctp-subtext0">{date}</time>
	<h3 class="text-lg font-semibold text-ctp-text">
		{title}
	</h3>
	<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
		<slot />
	</p>
</li>
